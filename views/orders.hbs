<h1>Orders</h1>

{{#if orders.length}}
{{#each orders}}
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-content">
                <span class="card-title">
                    Title <small>{{_id}}</small>
                </span>
                <p>{{date}}</p>
                <p>
                    <em>{{this.user.userId.name}}</em>
                    ({{user.userId.email}})
                </p>
                <ol>
                    {{#each courses}}
                    <li>
                        {{course.title}}(x<strong>{{count}}</strong>)
                    </li>
                    {{/each}}
                </ol>
                <hr>
                <p>
                 Price: <span class="price">{{price}}</span>
                </p>
            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
{{/if}}