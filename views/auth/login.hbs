<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a href="#register">Registration</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}
      <h1>
        Log in to Shop
      </h1>
      <form action="/auth/login" method="POST">
        <input type="hidden" value={{csrf}} name="_csrf" />
        <div class="input-field">
          <input
            placeholder="Enter course name"
            name="email"
            id="email"
            type="text"
            class="validate"
            required
          />
          <label for="email">User email</label>
          <span class="helper-text" data-error="Enter user email"></span>
        </div>
        <div class="input-field">
          <input
            placeholder="Enter user password"
            name="password"
            id="password"
            type="password"
            class="validate"
            required
          />
          <label for="title">User password</label>
          <span class="helper-text" data-error="Enter user password"></span>
        </div>
        <button class="btn btn-primary" type="submit">Login</button>
      </form>
    </div>
    <div id="register" class="col offset-s3">
      {{#if registerError}}
        <p class="alert">{{registerError}}</p>
      {{/if}}
      <h1>
        Create new account
      </h1>
      <form action="/auth/register" method="POST" novalidate>
        <input type="hidden" value={{csrf}} name="_csrf" />
        <div class="input-field">
          <input
            placeholder="Enter user email"
            name="email"
            id="remail"
            type="text"
            class="validate"
            required
          />
          <label for="remail">User email</label>
          <span class="helper-text" data-error="Enter user email"></span>
        </div>
        <div class="input-field">
          <input
            placeholder="Enter users name"
            name="name"
            id="name"
            type="text"
            class="validate"
            required
          />
          <label for="email">User name</label>
          <span class="helper-text" data-error="Enter user name"></span>
        </div>
        <div class="input-field">
          <input
            placeholder="Enter user password"
            name="password"
            id="rpassword"
            type="password"
            class="validate"
            required
          />
          <label for="rpassword">User password</label>
          <span class="helper-text" data-error="Enter user password"></span>
        </div>
        <div class="input-field">
          <input
            placeholder="Confirm password"
            name="confirm"
            id="confirm"
            type="password"
            class="validate"
            required
          />
          <label for="confirm">Confirm password</label>
          <span class="helper-text" data-error="Confirm password"></span>
        </div>
        <button class="btn btn-primary" type="submit">Register</button>
      </form>
    </div>
  </div>
</div>